{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2015", "dom"],
    "jsx": "react",
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "strict": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "noUnusedLocals": true
  },
  "exclude": ["node_modules", "dev.js", "**/*.test.ts"]
}
